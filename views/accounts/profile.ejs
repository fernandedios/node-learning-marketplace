<% layout('boilerplate') %>

<div class="container py-4">
  <div class="row">
    <div class="col">
      <% if (message.length > 0) { %>
        <div class="alert alert-success alert-dismissable">
          <button class="close" type="button" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times</span>
          </button>
          <%= message %>
        </div>
      <% } %>

      <h4><%= user.profile.name %></h4>
      <p><%= user.profile.title %></p>
      <div class="row pt-3">
        <div class="col-md-3">
          <img src="<%= user.profile.picture %>" class="rounded-circle w-100">
        </div>
        <div class="col-md-9">
          <p><%= user.profile.desc %></p>
        </div>
      </div>
      <div class="row">
        <div class="col p-5">
          <a href="/profile/edit" class="btn btn-success">Edit Profile</a>
        </div>
      </div>

    </div>
  </div>
</div>
