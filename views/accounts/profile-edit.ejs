<% layout('boilerplate') %>

<div class="container py-4">
  <div class="row">
    <div class="col">
      <div class="bg"></div>
    </div>
  </div>

  <div class="row">
    <div class="col">
      <h3>Edit Profile</h1>
      <form action="" method="post" role="form">
        <div class="form-group">
          <label for="name">Name:</label>
          <input type="text" name="name" id="name" class="form-control" placeholder="<%= user.name %>">
        </div>

        <div class="form-group">
          <label for="name">Title:</label>
          <input type="text" name="title" id="title" class="form-control" placeholder="<%= user.title %>">
        </div>

        <div class="form-group">
          <label for="name">Profile Picture</label>
          <input type="text" name="picture" id="picture" class="form-control" placeholder="<%= user.picture %>">
        </div>

        <div class="form-group">
          <label for="desc">Profile</label>
          <textarea class="form-control" name="desc" id="desc" placeholder="<%= user.desc %>" rows="3"></textarea>
        </div>

        <button type="submit" class="btn btn-success">Submit</button>
      </form>
    </div>
  </div>
</div>
