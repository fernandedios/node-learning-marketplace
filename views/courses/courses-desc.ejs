<% layout('boilerplate') %>

<div class="container py-4">
  <div class="row">
    <div class="col">

      <div class="jumbotron">
        <div class="container">
          <h3 class="display-5"><%= course.title %></h3>
          <p><%= course.desc %></p>
          <div class="row">
            <div class="col-lg-6 col-md-offset-3">
              <form action="/payment" method="POST">
                <input type="hidden" name="courseId" value="<%= course._id %>">
                <script
                  src="https://checkout.stripe.com/checkout.js" class="stripe-button"
                  data-key="pk_test_MtUntAiIwyeqm7njBAOdkqKg"
                  data-amount="<%= course.price %>"
                  data-name="elearning"
                  data-description="Widget"
                  data-image="https://stripe.com/img/documentation/checkout/marketplace.png"
                  data-locale="auto">
                </script>
              </form>
            </div>
          </div>
        </div>
      </div>

      <hr>

      <div class="row">
        <div class="col">
          <h5>Enrolled Students</h5>
          <div class="card">
            <div class="card-body">
              <h5 class="card-title">Students</h5>
              <div class="card-text">
                <% if (course.ownByStudent.length === 0) { %>
                  <p>0</p>
                <% } else { %>
                  <% for(var i = 0; i < course.ownByStudent.length; i++) { %>
                    <div class="col-xs-2">
                      <img src="<%= course.ownByStudent[i].user.profile.picture %>" />
                    </div>
                  <% } %>
                <% } %>
              </div>
            </div>
          </div>
        </div>
      </div>

    </div>
  </div>
</div>
