<% layout('boilerplate') %>

<div class="container py-4">
  <div class="row">
    <div class="col">
      <div class="bg"></div>
    </div>
  </div>

  <div class="row">
    <div class="col">
      <h3>Edit Course</h1>
      <form action="" method="post" role="form">
        <div class="form-group">
          <label for="name">Title:</label>
          <input type="text" name="title" id="title" class="form-control" placeholder="<%= course.title %>">
        </div>

        <div class="form-group">
          <label for="name">Price:</label>
          <input type="text" name="price" id="price" class="form-control" placeholder="<%= course.price %>">
        </div>

        <div class="form-group">
          <label for="name">Description:</label>
          <input type="text" name="desc" id="desc" class="form-control" placeholder="<%= course.desc %>">
        </div>

        <div class="form-group">
          <label for="name">Thumbnail:</label>
          <input type="text" name="thumbnail" id="thumbnail" class="form-control" placeholder="<%= course.thumbnail %>">
        </div>

        <div class="form-group">
          <label for="name">Wistia ID:</label>
          <input type="text" name="wistiaId" id="wistiaId" class="form-control" placeholder="<%= course.wistiaId %>">
        </div>

        <button type="submit" class="btn btn-success">Submit</button>
      </form>
    </div>
  </div>
</div>
